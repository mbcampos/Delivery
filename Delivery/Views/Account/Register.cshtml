@model LoginViewModel;

<table style="margin: auto; width: 60%; margin-bottom: 20px;">
    <tr>
        <td style="width: 50%; text-align: center;">
            <img src="~/images/login.jpg" width="150px" height="150px" style="text-align: center; padding: 15px;" />
        </td>
        <td style="width: 50%;">
            <div class="row">
                <div>
                    <h4>Registrar Usuário</h4>
                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">

                        <hr>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl">

                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <div>
                                <input asp-for="UserName" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <div>
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                <input type="submit" class="btn btn-success" value="Entrar" style="margin-top: 10px;">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>